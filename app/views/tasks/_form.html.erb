<%= form_for task do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
            <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label "Status" %>
      <%= f.select :status, [['Backlog', 'Backlog'], ['In Progress', 'In Progress'], ['Completed', 'Completed']] %>
    </div>
    <div class="actions">
      <%= f.submit "Submit", class: "btn btn-info"%>
    </div>
<% end %>